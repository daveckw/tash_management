<p id="notice"><%= notice %></p>

<h1>Project Tasks</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Dateline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_tasks.each do |project_task| %>
      <tr>
        <td><%= project_task.name %></td>
        <td><%= project_task.status %></td>
        <td><%= project_task.dateline %></td>
        <td><%= link_to 'Show', project_task %></td>
        <td><%= link_to 'Edit', edit_project_task_path(project_task) %></td>
        <td><%= link_to 'Destroy', project_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project Task', new_project_task_path, class: "btn btn-default" %>
